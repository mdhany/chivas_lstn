<p id="notice"><%= notice %></p>

<p>
  <strong>Consumidor:</strong>
  <%= @customer.name %>
</p>

<p>
  <strong>Nacimiento:</strong>
  <%= @customer.birth %>
</p>

<p>
  <strong>Móvil:</strong>
  <%= @customer.mobile %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>


<p>
  <strong>Fecha de activación:</strong>
  <%= @customer.created_at %>
</p>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
  </div>
</div>


<!-- UTILIZADOS-->
<br>

<div class="portlet box green">
  <div class="portlet-title">
    <div class="caption">Códigos asociados a <%= @customer.name %></div>
    <div class="tools">
      <a class="collapse" href="javascript:;"></a>
      <a class="config" data-toggle="modal" href="#portlet-config"></a>
      <a class="reload" href="javascript:;"></a>
      <a class="remove" href="javascript:;"></a>
    </div>
  </div>
  <div class="portlet-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>ID</th>
          <th>Código</th>
          <th>Estado</th>
          <th>Es un código Chivas?</th>

          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @customer.codes.each do |i| %>
            <tr>
              <td><%= i.id %></td>
              <td><b><%= i.code %></b></td>
              <td><%= i.is_used? ? 'Registrado': 'Sin registrar' %></td>
              <td><%= i.chivas_code? ? 'Válido': 'Inválido' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>